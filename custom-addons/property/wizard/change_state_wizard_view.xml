<odoo>


	<record  id="change_state_wizard_view_form" model="ir.ui.view">
		<field name="name">Change State Wizard Form</field>
		<field name="model">change.state</field>
		<field name="arch" type="xml">
			<form>
                <group>
                    <field name="property_id"/>
                    <field name="state"/>
                    <field name="reason"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
			</form>
		</field>
	</record>

	<record  id="owner_action" model="ir.actions.act_window">
		<field name="name">Owner</field>
		<field name="res_model">owner</field>
	</record>

	<menuitem id="owner_menu_item"
	name="Owners"
	parent="configration_menu"
	action="owner_action"
	/>
</odoo>